<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2630"
    android:visibility="visible">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:text="Soyad"
        android:textColor="#9CA5B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surnameText"
        android:layout_width="359dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="255dp"
        android:ems="10"
        android:hint="Soyad"
        android:textColor="@color/white"
        android:textColorHint="#5E656F"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="135dp"
        android:text="Ad"
        android:textColor="#9CA5B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="359dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="Ad"
        android:textColor="@color/white"
        android:textColorHint="#5E656F"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailText2"
        android:layout_width="359dp"
        android:layout_height="45dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="355dp"
        android:ems="10"
        android:hint="Eposta"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#5E656F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText2"
        android:layout_width="362dp"
        android:layout_height="46dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="455dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Şifre"
        android:inputType="textPassword"


        android:onClick="signUpClicked"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#F6EFEF"
        android:textColor="#FFFFFF"
        android:textColorHint="#5E656F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="430dp"
        android:text="Şifre"
        android:textColor="#9CA5B4"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="335dp"
        android:text="Eposta"
        android:textColor="#9CA5B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="335dp"
        android:layout_height="50dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="555dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#03A87C"
        android:fontFamily="@font/cuzel"
        android:onClick="signUpButtonClicked"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="153dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cuzel"
        android:text="Giriş Yap"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/cuzel"
        android:text="Zaten Hesabın Var mı?"
        android:textColor="#9CA5B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/cuzel"
        android:onClick="goLoginButton"
        android:text="Giriş Yap"
        android:textColor="#0071DF"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>