<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2630"
    android:forceDarkAllowed="false"
    android:overScrollMode="always"
    android:visibility="visible"

    tools:visibility="visible">


    <Button
        android:id="@+id/logIn"
        android:layout_width="335dp"
        android:layout_height="50dp"


        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#0071DF"
        android:fontFamily="@font/cuzel"
        android:onClick="loginButtonClicked"
        android:text="GİRİŞ YAP"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText2"
        android:layout_width="361dp"
        android:layout_height="40dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="245dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:onClick="signUpClicked"
        android:outlineAmbientShadowColor="#FFFFFF"


        android:outlineSpotShadowColor="#F6EFEF"
        android:textColor="#FFFFFF"
        android:textColorHint="#5E656F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:text="Eposta"
        android:textColor="#9CA5B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="215dp"
        android:text="Şifre"
        android:textColor="#9CA5B4"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailText2"
        android:layout_width="359dp"
        android:layout_height="45dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:hint="Eposta"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#5E656F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="153dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cuzel"
        android:text="Giriş Yap"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="223dp"
        android:layout_marginTop="335dp"
        android:editable="false"
        android:fadeScrollbars="false"
        android:fallbackLineSpacing="true"
        android:fontFamily="@font/cuzel"
        android:forceHasOverlappingRendering="false"
        android:freezesText="false"
        android:gravity="left|center_vertical"
        android:hapticFeedbackEnabled="false"
        android:onClick="forgotPasswordClicked"
        android:singleLine="false"
        android:text="Şifrenizi mi Unuttunuz?"
        android:textColor="#9CA5B4"
        android:textColorHighlight="#FFFFFF"
        android:textIsSelectable="false"
        android:typeface="normal"
        app:guidelineUseRtl="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cuzel"
        android:text="Hesabınız Yokmu? "
        android:textColor="#9CA5B4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logIn" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cuzel"
        android:onClick="signupButtonClicked"
        android:text="Kaydol"
        android:textColor="#03A87C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/logIn" />

</androidx.constraintlayout.widget.ConstraintLayout>